<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescriptionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/des_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#82B1FF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="369dp"
                android:layout_height="match_parent"
                android:text="Parking Bay Description" />

            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/icons8_close_window_100" />


        </LinearLayout>

        <!--        available-->
        <LinearLayout
            android:id="@+id/des_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/des_ava"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!--        price-->
        <LinearLayout
            android:id="@+id/des_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/price_40"
                android:text="Price: " />

            <TextView
                android:id="@+id/des_price"
                android:layout_width="321dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!--        time1-->
        <LinearLayout
            android:id="@+id/des_layout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/time"
                android:text="Time: " />

            <TextView
                android:id="@+id/des_time1"
                android:layout_width="324dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!--        time2-->
        <LinearLayout
            android:id="@+id/des_layout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Time: "
                android:visibility="invisible" />

            <TextView
                android:id="@+id/des_time2"
                android:layout_width="352dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!--        time3-->
        <LinearLayout
            android:id="@+id/des_layout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Time: "
                android:visibility="invisible" />

            <TextView
                android:id="@+id/des_time3"
                android:layout_width="352dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!--        time4-->
        <LinearLayout
            android:id="@+id/des_layout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Time: "
                android:visibility="invisible" />

            <TextView
                android:id="@+id/des_time4"
                android:layout_width="352dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!--        time5-->
        <LinearLayout
            android:id="@+id/des_layout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Time: "
                android:visibility="invisible" />

            <TextView
                android:id="@+id/des_time5"
                android:layout_width="349dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <!--        time6-->
        <LinearLayout
            android:id="@+id/des_layout10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Time: "
                android:visibility="invisible" />

            <TextView
                android:id="@+id/des_time6"
                android:layout_width="352dp"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>